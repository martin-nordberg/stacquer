{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "outDir": "./dist",
    "paths": {
      "$shared/*": [
        "../../shared/stacquer-shared/src/*"
      ]
    }
  },
  "include": [
    "src",
    "vitest"
  ],
  "exclude": [
    "node_modules"
  ]
}
